@{
    ViewBag.Title = "Bright Ideas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-55570120-3', 'auto');
    ga('send', 'pageview');

</script>

<div class="container">

    @*DESKTOP*@

    <div class="span8 offset2 hidden-phone">

        <div class="top-buffer" style="vertical-align: middle;">
            <span style="font-family: Gotham-Medium; color: #3a3d3f; font-size: 14pt;">BRIGHT IDEAS</span>
            <br />
            <br />
            <a href="~/Gallery"><span style="font-family: Gotham-Medium; color: blue; font-size: 10pt;">< BACK</span></a>


        </div>

        <div style="background-color: #f6f4bf; vertical-align: middle; font-family: Gotham-Light; font-size: 11pt; line-height: 22px;" id="divLatestNewsMain">
            <br />
            Please click on an image to enlarge in a new browser window.
            <br />
            <br />
        </div>

    </div>
</div>

<div class="container">
    <div class="span8 offset2 hidden-phone">
        <div style="text-align: center;">

            @for (int i = 0; i < Model.Length; i = i + 3)
            {
                <div class="row-fluid">

                    <div class="span4" style="margin-bottom: 12px;">
                        <a href="@Model[i]"><img src="@Model[i]" style="margin-bottom:10px;" /></a>
                    </div>

                    @if (i + 1 < Model.Length)
                    {

                        <div class="span4" style="margin-bottom: 12px;">
                            <a href="@Model[i + 1]"><img src="@Model[i + 1]" style="margin-bottom:10px;" /></a>
                        </div>

                    }


                    @if (i + 2 < Model.Length)
                    {


                        <div class="span4" style="margin-bottom: 12px;">
                            <a href="@Model[i + 2]"><img src="@Model[i + 2]" style="margin-bottom:10px;" /></a>
                        </div>
                    }

                </div>
            }

        </div>
        <br />
        <a href="~/Gallery"><span style="font-family: Gotham-Medium; color: blue; font-size: 10pt;">< BACK</span></a>
        <br />
        <br />
    </div>
</div>


@*PHONE*@

<div class="container">
    <div class="hidden-tablet hidden-desktop" style="margin-left:15px; margin-right: 15px;">
        <div class="row-fluid">
            <div class="top-buffer" style="vertical-align: middle;">
                <span style="font-family: Gotham-Medium; color: #3a3d3f; font-size: 14pt;">BRIGHT IDEAS</span>
                <br />
                <br />
                <a href="~/Gallery"><span style="font-family: Gotham-Medium; color: blue; font-size: 10pt;">< BACK</span></a>
            </div>
        </div>

        <div class="row-fluid">

            <div class="offset1 span11" style="background-color: #f6f4bf; vertical-align: middle; font-family: Gotham-Light; font-size:11pt; line-height:22px;" id="divLatestNewsMain">
                <br />
                Please click on an image below to see related pictures.
                <br />
                <br />
                <br />
            </div>
        </div>
    </div>

    <div class="span8 offset2 hidden-tablet hidden-desktop" style="margin-top: -20px;">
        <div style="text-align: center; margin-left: 15px; margin-right: 15px;">

            @for (int i = 0; i < Model.Length; i++)
            {

                <div class="span4" style="margin-bottom: 5px;">
                    <a href="@Model[i]"><img src="@Model[i]" style="margin-bottom:10px;" /></a>
                </div>
            }

        </div>
        <div style="text-align: left; margin-left: 15px; margin-right: 15px;">
            <br />
            <a href="~/Gallery"><span style="font-family: Gotham-Medium; color: blue; font-size: 10pt;">< BACK</span></a>
            <br />
            <br />
        </div>
    </div>
</div>

