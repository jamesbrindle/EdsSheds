@model IR_BackOffice.Models.EditOfferViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "ManageOffers", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EditTipsItem</legend>

        @Html.HiddenFor(model => model.Id)

        <table>
            <tr>
                <td style="vertical-align: middle;">
                    <div>
                        Title
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Title)
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                    <div>
                        Image
                    </div>
                    <div>
                        (Try to make the images roughly 1024px x 613px so the images match the rest of the site layout).
                        <br />
                        <br />
                    </div>
                    <input type="file" name="image" />

                </td>
                <td style="vertical-align: middle;">
                    <img src="@Url.Action("DisplayImageAsync", "Offers", new { id = Model.Id })" />
                </td>
            </tr>
        </table>

        <div>
            <br />
            Content
        </div>
        <div>
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div>
            <br />
            Date Added
        </div>
        <div>
            @Html.EditorFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div>
            Is Live?&nbsp;

            @Html.EditorFor(model => model.IsLive)
            @Html.ValidationMessageFor(model => model.IsLive)
        </div>
        <br />
        <input type="submit" value="Save" />

    </fieldset>
}

<div>
    @Html.ActionLink("<< Back to List", "Index", null, new { @Style = "color: blue; text-decoration: underline;" })
    <br />
    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
