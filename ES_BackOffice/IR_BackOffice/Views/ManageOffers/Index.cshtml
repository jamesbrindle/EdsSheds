@model IEnumerable<ES_BackOffice_Data.OfferItem>

@{
    ViewBag.Title = "Offer Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Offers Items</h2>

<br />
@Html.ActionLink("Create New", "Create", null, new { @style = "color: blue; text-decoration: underline;" })
<br />
<br />

<table>
    <tr>
        <th style="text-align: center; padding: 0px 30px 0px 30px">Title</th>
        <th style="text-align: center; padding: 0px 30px 0px 30px">Content</th>
        <th style="text-align: center; padding: 0px 30px 0px 30px">Date Added</th>
        <th style="text-align: center; padding: 0px 30px 0px 30px">Is Live?</th>
        <th colspan="3">Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.DateAdded).ToString().Remove(8)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.IsLive)
            </td>
            <td colspan="3" style="text-align: center;">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Style = "color: blue; text-decoration: underline;" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @Style = "color: blue; text-decoration: underline;" })
            </td>
        </tr>
    }

</table>
